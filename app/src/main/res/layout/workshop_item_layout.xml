<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    android:background="@color/colorPrimary"
    android:foreground="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/workshopNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Workshop name"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/workshopAddressTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/workshopNameTV"
        android:text="Address of workshop"
        android:textColor="@color/white"
        android:layout_marginStart="8dp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/workshopPhoneTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="0165451210"
        android:textColor="@color/white"
        android:textSize="14sp" />

</RelativeLayout>